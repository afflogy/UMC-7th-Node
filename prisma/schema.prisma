generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       BigInt   @id @default(autoincrement())
  name          String   @db.VarChar(10)
  phone         String   @map("phone_number") @db.VarChar(20)
  email         String   @unique(map: "email") @db.VarChar(30)
  password      String   @db.VarChar(40)
  gender        Boolean  @db.TinyInt
  birth         DateTime @map("birth_date") @db.Date
  address       String   @db.VarChar(50)
  activation    Boolean  @db.TinyInt
  point         Int      @map("user_point")

  @@map("user")
}